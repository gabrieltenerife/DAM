<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.entregagui.Accesibilidad_Controller">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F4F4F9; -fx-padding: 20;">
      
          <!-- Título de la ventana -->
          <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2F3C7E;" text="Accesibilidad" />
      
          <!-- Sección: Perfiles de accesibilidad -->
          <VBox layoutX="20.0" layoutY="70.0" spacing="15.0" style="-fx-background-color: #E8F1F2; -fx-padding: 15; -fx-border-color: #2F3C7E; -fx-border-radius: 10; -fx-border-width: 2; -fx-background-radius: 10;">
              <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2F3C7E;" text="Perfiles de accesibilidad" />
              <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Adaptación al lector de pantalla" />
              <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Navegación con el teclado" />
              <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Navegación inteligente" />
          </VBox>
      
          <!-- Sección: Ajustes de voz y navegación -->
          <VBox layoutX="300.0" layoutY="70.0" spacing="15.0" style="-fx-background-color: #E8F1F2; -fx-padding: 15; -fx-border-color: #2F3C7E; -fx-border-radius: 10; -fx-border-width: 2; -fx-background-radius: 10;">
              <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2F3C7E;" text="Ajustes de voz y navegación" />
              <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Lector de texto" />
              <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Comandos de voz" />
          </VBox>
      
          <!-- Sección: Ajuste de color -->
          <VBox layoutX="20.0" layoutY="290.0" spacing="15.0" style="-fx-background-color: #E8F1F2; -fx-padding: 15; -fx-border-color: #2F3C7E; -fx-border-radius: 10; -fx-border-width: 2; -fx-background-radius: 10;">
              <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2F3C7E;" text="Ajuste de color" />
              <HBox spacing="10.0">
                  <Label style="-fx-font-size: 14; -fx-text-fill: #2F3C7E;" text="Color personalizado" />
                  <Slider prefWidth="200.0" style="-fx-background-color: #6A8CAF;" />
              </HBox>
              <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Restablecer colores" />
              <HBox spacing="10.0">
                  <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Monocromo" />
                  <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Contraste oscuro" />
                  <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Contraste claro" />
              </HBox>
              <HBox spacing="10.0">
                  <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Baja saturación" />
                  <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Alta saturación" />
                  <Button style="-fx-font-size: 14; -fx-background-color: #6A8CAF; -fx-text-fill: white; -fx-background-radius: 5;" text="Modo de contraste" />
              </HBox>
          </VBox>
      
          <!-- Botones de acción -->
          <HBox layoutX="20.0" layoutY="550.0" spacing="20.0">
              <Button style="-fx-font-size: 14; -fx-background-color: #F25C54; -fx-text-fill: white; -fx-background-radius: 5;" text="Desactivar accesibilidad" />
              <Button style="-fx-font-size: 14; -fx-background-color: #2F3C7E; -fx-text-fill: white; -fx-background-radius: 5;" text="Declaración de accesibilidad" />
              <Button style="-fx-font-size: 14; -fx-background-color: #2F3C7E; -fx-text-fill: white; -fx-background-radius: 5;" text="Enviar comentarios" />
          </HBox>
         <Button fx:id="Salir" layoutX="712.0" layoutY="553.0" mnemonicParsing="false" onAction="#salir" text="Salir" />
      </AnchorPane>
   </center>
   <top>
      <Label text="    " BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Label text="    " BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Label text="    " BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Label text="     " BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
